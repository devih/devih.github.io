            <% let socialClass = '' %>
            <% if (theme.busuanziStatistics.enable && theme.busuanziStatistics.enable) { %>
                <% socialClass = 'social-statis' %>
            <% } %>
            <% if (theme.busuanziStatistics.enable && theme.busuanziStatistics.totalTraffic) { %>
